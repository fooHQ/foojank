var app = cli.app({
    name: "ls",
    usage: "List directory contents",
    action: func(c) {
        args := c.args()
        if len(args) == 0 {
            args.append(".")
        }

        for _, f := range args {
            if len(args) > 1 {
                printf("%s:\n", f)
            }

            for _, f := range ls(f) {
                print(f.name)
            }
        }
    }
})
